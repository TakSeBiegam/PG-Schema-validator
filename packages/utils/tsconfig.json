{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es2022",
    "module": "es2022",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*", "public/cli"],
  "exclude": ["node_modules"]
}
